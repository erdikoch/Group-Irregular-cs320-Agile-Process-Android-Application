<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/splashScreenRelativeLayout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/splash_screen_background">

    <ImageView android:id="@+id/logoImageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:src="@drawable/splash_screen_logo"/>

    <ImageView android:id="@+id/SplashScreenImageView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:src="@drawable/splash_screen"/>

</RelativeLayout>